<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26292E"
    android:paddingStart="30dp"
    android:paddingLeft="30sp"
    android:paddingEnd="30dp"
    android:paddingRight="30sp"
    tools:context=".activity.LoginActivity">


    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:translationY="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <LinearLayout
        android:id="@+id/SelectLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textSize="14sp"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/ic_baseline_edit_location_24"/>
    </LinearLayout>

    <TextView
        android:id="@+id/logintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />


    <ImageView
        android:id="@+id/NumberAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_baseline_phone_iphone_24"
        app:layout_constraintBottom_toBottomOf="@+id/NumberInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/NumberInputLayout"
        app:layout_constraintVertical_bias="0.163" />





    <EditText
        android:id="@+id/NumberInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#757575"
        android:fontFamily="@font/montserrat_medium"
        android:hint="@string/mobile_number"
        android:inputType="number"
        android:paddingStart="33dp"
        android:paddingEnd="0dp"
        android:textColor="@color/white"
        android:textColorHint="#525662"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logintitle"
        app:layout_constraintVertical_bias="0.163" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/NumberInputLayoutError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/field_required"
        android:textColor="@color/red"
        android:fontFamily="@font/lato_regular"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/NumberInputLayout"/>


    <ImageView
        android:id="@+id/PasswordAnimsation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_baseline_lock_24"
        app:layout_constraintBottom_toBottomOf="@+id/PasswordInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/PasswordInputLayout" />



    <EditText
        android:id="@+id/PasswordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#757575"
        android:fontFamily="@font/montserrat_medium"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="33dp"
        android:paddingEnd="33dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textColorHint="#525662"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumberInputLayout" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/PasswordInputLayoutError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/field_required"
        android:textColor="@color/red"
        android:fontFamily="@font/lato_regular"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/PasswordInputLayout"/>


    <LinearLayout
        android:id="@+id/passwordshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/PasswordInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/PasswordInputLayout"
        app:layout_constraintTop_toTopOf="@+id/PasswordInputLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_eye" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/remember_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordInputLayout">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox"
            android:layout_width="34dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/forgotBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/remember_layout"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/remember_layout">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Forgot Password ?"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn_design"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remember_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Log In"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>







    <LinearLayout
        android:id="@+id/SignUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




























