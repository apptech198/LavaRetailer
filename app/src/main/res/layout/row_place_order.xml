<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="@color/dialog_back">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Place"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/dialog_heading"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/Title"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to place order in this address?"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/addTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginTop="12dp"
        android:textColor="@color/dialog_heading"
        app:layout_constraintTop_toBottomOf="@+id/des"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/lato_black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintEnd_toStartOf="@+id/addressLayout"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

        <LinearLayout
            android:id="@+id/addressLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/address"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24" />

        </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/address"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">


        <LinearLayout
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/order_place_btn">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:paddingTop="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/white"
                android:paddingBottom="4dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:fontFamily="@font/lato_semi_bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/order_place_btn">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place order"
                android:paddingTop="4dp"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:fontFamily="@font/lato_semi_bold" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>






































